{
  "manifest_version": 2,

  "name": "Leo Inline Translator",
  "description": "Get Leo.de's definition of your highlighted word without leaving the page",
  "version": "0.01",

  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["pickle.css"],
      "js": ["js/jquery.min.js",  "pickle.js"]

    }
  ],
  "background": {
    "persistant":false,
    "scripts": [ "build.js"]
  },
  "permissions": [
    "tabs", 
    "http://*/*",
    "https://*/*",
    "http://fonts.googleapis.com/",
    "https://fonts.googleapis.com/",
    "https://ajax.googleapis.com/",
    "contextMenus"
  ]
}
